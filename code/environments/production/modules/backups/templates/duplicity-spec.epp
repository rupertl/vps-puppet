<%- | String $name, String $from, String $full_day | -%>
# duplicity spec file
# Managed by puppet
# $name - logical name for backup
# $from - local directory to backup
# $full_day - day of month to do full backups on

NAME=<%= $name %>
LOCAL_DIR=<%= $from %>
REMOTE_DIR=ssh://backups@<%= $backups::backup_host %>/systems/<%= $::hostname %>/duplicity/<%= $name %>
FULL_DAY=<%= $full_day %>

source /root/.duplicity-passphrase
